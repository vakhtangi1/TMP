<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="team4.tmp.view.TaskViewController" style="-fx-background-color: black;">
    <top>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Task Management" style="-fx-font-size: 24px; -fx-text-fill: white;" />
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <children>
                    <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill: white;" />
                    <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                    <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-text-fill: white;" />
                    <TextField fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                    <Label text="Due Date (YYYY-MM-DD):" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-text-fill: white;" />
                    <TextField fx:id="dueDateField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    <Button text="Add Task" onAction="#handleAddTask" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                </children>
            </GridPane>
        </VBox>
    </top>
    <left>
        <VBox alignment="TOP_LEFT" spacing="10" style="-fx-border-color: white; -fx-border-width: 2px;">
            <Label text="Your Tasks:" style="-fx-font-size: 24px; -fx-text-fill: white;" />
            <ListView fx:id="taskListView" style="-fx-background-color: black; -fx-font-size: 20px;" />
            <Label text="Finished Tasks:" style="-fx-font-size: 24px; -fx-text-fill: white;" />
            <ListView fx:id="finishedTaskListView" style="-fx-background-color: black; -fx-font-size: 20px;" />
        </VBox>
    </left>
    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-translate-x: -30; -fx-translate-y: -30;">
            <Label fx:id="taskTitleLabel" text="" style="-fx-font-size: 20px; -fx-text-fill: white;" />
            <Label fx:id="taskDescriptionLabel" text="" style="-fx-text-fill: white;" />
            <Label fx:id="taskDueDateLabel" text="" style="-fx-text-fill: white;" />
        </VBox>
    </center>
</BorderPane>